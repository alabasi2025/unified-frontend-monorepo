import { Injectable } from '@angular/core';
import { HttpClient, HttpErrorResponse } from '@angular/common/http';
import { BehaviorSubject, Observable, throwError } from 'rxjs';
import { catchError, tap } from 'rxjs/operators';

// تعريف واجهة للبيانات التي سيتم أرشفتها
// يمكن استبدالها بواجهة بيانات حقيقية (مثل Item, Document, etc.)
interface ArchiveItem {
  id: number;
  name: string;
  type: string; // مثال: 'document', 'note', 'image'
  isArchived: boolean;
}

@Injectable({
  providedIn: 'root'
})
export class ArchiveService {
  private apiUrl = '/api/archive'; // نقطة نهاية API للأرشفة
  private archivedItemsSubject = new BehaviorSubject<ArchiveItem[]>([]);
  public archivedItems$ = this.archivedItemsSubject.asObservable();

  constructor(private http: HttpClient) {
    // تحميل البيانات عند تهيئة الخدمة
    this.loadAllArchivedItems();
  }

  private handleError(error: HttpErrorResponse) {
    let errorMessage = 'An unknown error occurred!';
    if (error.error instanceof ErrorEvent) {
      // خطأ من جانب العميل أو الشبكة
      errorMessage = `Error: ${error.error.message}`;
    } else {
      // خطأ من جانب الخادم
      errorMessage = `Server returned code: ${error.status}, error message: ${error.message}`;
    }
    console.error(errorMessage);
    // يمكن إرسال الخطأ إلى خدمة تسجيل الأخطاء
    return throwError(() => new Error(errorMessage));
  }

  private loadAllArchivedItems(): void {
    this.http.get<ArchiveItem[]>(this.apiUrl).pipe(
      tap(data => this.archivedItemsSubject.next(data)),
      catchError(this.handleError)
    ).subscribe();
  }

  // 1. جلب جميع العناصر المؤرشفة
  getAll(): Observable<ArchiveItem[]> {
    return this.http.get<ArchiveItem[]>(this.apiUrl).pipe(
      tap(data => this.archivedItemsSubject.next(data)),
      catchError(this.handleError)
    );
  }

  // 2. جلب العناصر المؤرشفة حسب النوع
  getByType(type: string): Observable<ArchiveItem[]> {
    const url = `${this.apiUrl}/type/${type}`;
    return this.http.get<ArchiveItem[]>(url).pipe(
      catchError(this.handleError)
    );
  }

  // 3. أرشفة عنصر
  archive(itemId: number): Observable<any> {
    const url = `${this.apiUrl}/${itemId}/archive`;
    return this.http.post(url, {}).pipe(
      tap(() => {
        // تحديث الحالة محليًا بعد الأرشفة بنجاح
        const currentItems = this.archivedItemsSubject.value.filter(item => item.id !== itemId);
        // افتراض أن العنصر المؤرشف لم يعد في قائمة العناصر المؤرشفة (إذا كان هذا هو سلوك API)
        // أو تحديث isArchived: true إذا كان API يعيد العنصر المحدث
        // هنا نفترض أن API يعيد قائمة العناصر المؤرشفة المحدثة
        this.loadAllArchivedItems();
      }),
      catchError(this.handleError)
    );
  }

  // 4. استعادة عنصر من الأرشيف
  restore(itemId: number): Observable<any> {
    const url = `${this.apiUrl}/${itemId}/restore`;
    return this.http.post(url, {}).pipe(
      tap(() => {
        // تحديث الحالة محليًا بعد الاستعادة بنجاح
        this.loadAllArchivedItems();
      }),
      catchError(this.handleError)
    );
  }

  // 5. حذف عنصر نهائيًا من الأرشيف
  permanentDelete(itemId: number): Observable<any> {
    const url = `${this.apiUrl}/${itemId}`;
    return this.http.delete(url).pipe(
      tap(() => {
        // تحديث الحالة محليًا بعد الحذف بنجاح
        const currentItems = this.archivedItemsSubject.value.filter(item => item.id !== itemId);
        this.archivedItemsSubject.next(currentItems);
      }),
      catchError(this.handleError)
    );
  }
}
