import { Injectable } from '@angular/core';
import { HttpClient, HttpErrorResponse } from '@angular/common/http';
import { BehaviorSubject, Observable, throwError, of } from 'rxjs';
import { catchError, tap, shareReplay } from 'rxjs/operators';

// تعريف واجهات البيانات (Typescript Interfaces)
interface Stats {
  totalUsers: number;
  totalNotes: number;
  activeSessions: number;
}

interface Activity {
  id: number;
  user: string;
  action: string;
  timestamp: string;
}

interface Recommendation {
  id: number;
  title: string;
  relevanceScore: number;
}

@Injectable({
  providedIn: 'root'
})
export class DashboardService {
  private apiUrl = '/api/dashboard';

  // State Management with BehaviorSubject
  private statsSubject = new BehaviorSubject<Stats | null>(null);
  public stats$ = this.statsSubject.asObservable();

  private activitySubject = new BehaviorSubject<Activity[]>([]);
  public recentActivity$ = this.activitySubject.asObservable();

  private recommendationsSubject = new BehaviorSubject<Recommendation[]>([]);
  public recommendations$ = this.recommendationsSubject.asObservable();

  // Caching mechanism
  private statsCache$: Observable<Stats> | null = null;
  private activityCache$: Observable<Activity[]> | null = null;
  private recommendationsCache$: Observable<Recommendation[]> | null = null;

  constructor(private http: HttpClient) {}

  /**
   * معالج الأخطاء العام
   */
  private handleError(error: HttpErrorResponse) {
    let errorMessage = 'An unknown error occurred!';
    if (error.error instanceof ErrorEvent) {
      // خطأ من جانب العميل أو الشبكة
      errorMessage = `Client-side error: ${error.error.message}`;
    } else {
      // خطأ من جانب الخادم
      errorMessage = `Server returned code ${error.status}, body was: ${error.error}`;
    }
    console.error(errorMessage);
    // إرجاع Observable بخطأ يمكن للمكونات الاشتراك فيه
    return throwError(() => new Error('Something bad happened; please try again later.'));
  }

  /**
   * جلب الإحصائيات مع تطبيق Caching و State Management
   */
  getStats(forceRefresh: boolean = false): Observable<Stats> {
    if (!forceRefresh && this.statsCache$) {
      return this.statsCache$;
    }

    const apiCall = this.http.get<Stats>(`${this.apiUrl}/stats`).pipe(
      tap(data => this.statsSubject.next(data)), // تحديث الحالة
      catchError(this.handleError), // معالجة الأخطاء
      shareReplay(1) // تطبيق Caching
    );

    this.statsCache$ = apiCall;
    return apiCall;
  }

  /**
   * جلب النشاطات الأخيرة مع تطبيق Caching و State Management
   */
  getRecentActivity(forceRefresh: boolean = false): Observable<Activity[]> {
    if (!forceRefresh && this.activityCache$) {
      return this.activityCache$;
    }

    const apiCall = this.http.get<Activity[]>(`${this.apiUrl}/activity`).pipe(
      tap(data => this.activitySubject.next(data)), // تحديث الحالة
      catchError(this.handleError), // معالجة الأخطاء
      shareReplay(1) // تطبيق Caching
    );

    this.activityCache$ = apiCall;
    return apiCall;
  }

  /**
   * جلب التوصيات مع تطبيق Caching و State Management
   */
  getRecommendations(forceRefresh: boolean = false): Observable<Recommendation[]> {
    if (!forceRefresh && this.recommendationsCache$) {
      return this.recommendationsCache$;
    }

    const apiCall = this.http.get<Recommendation[]>(`${this.apiUrl}/recommendations`).pipe(
      tap(data => this.recommendationsSubject.next(data)), // تحديث الحالة
      catchError(this.handleError), // معالجة الأخطاء
      shareReplay(1) // تطبيق Caching
    );

    this.recommendationsCache$ = apiCall;
    return apiCall;
  }
}
